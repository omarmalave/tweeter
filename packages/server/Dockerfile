# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 4000:4000 -t server`.
FROM docker.io/node:19-alpine

ENV HOST=0.0.0.0
ENV PORT=4000

WORKDIR /app

RUN addgroup --system server && \
          adduser --system -G server server

COPY ./dist/packages/server server
RUN chown -R server:server .

CMD [ "node", "server" ]
